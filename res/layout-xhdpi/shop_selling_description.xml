<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_black_bg"
    android:orientation="vertical" >
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/top_small_logo" />

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="420dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sell_base"
        android:orientation="vertical" >

        <EditText
        android:id="@+id/shop_sell_description"
        android:background="@drawable/store_logo"
        android:layout_width="300dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="270dp"
        android:padding="12dp"
        android:gravity="top|left"
        android:textSize="17dp"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:hint="Add a description for the item you want to pawn.......                                      (no more than 280 characters)"
        android:minLines="5"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:singleLine="false" />
<TextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/update_link"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#B58054"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Update Address"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    <View android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="71dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" >

            <Button
                android:id="@+id/description_back"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                
                
                android:layout_marginBottom="7dp"
                android:background="@drawable/back_button_selector" />

            <Button
                android:id="@+id/description_forward"
                android:layout_width="55dp"
                android:layout_marginBottom="7dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                
                
                android:background="@drawable/forword_button" />
        </RelativeLayout>

</LinearLayout>
